{
	"name": "mapero",
	"version": "0.1",
	"description": "An OSM-renderer as LEGO dots",
	"license": "AGPL-3.0-or-later",
	"esy": {
		"build": "dune build --profile release @all",
		"buildsInSource": "_build"
	},
	"scripts": {
		"clean": "rm -Rf _build",
		"test": "dune runtest",
		"doc": "dune build @doc",
		"server": "./server.sh"
	},
	"dependencies": {
		"@opam/dune": ">=2.7",
		"@opam/ocamlfind": "1.9.5",
		"@opam/lwt_ppx": "*",
		"@opam/js_of_ocaml": "~4.1",
		"@opam/js_of_ocaml-lwt": "*",
		"@opam/js_of_ocaml-ppx": "*",
		"@opam/js_of_ocaml-ppx_deriving_json": "*",
		"@opam/tyxml": "*",
		"@opam/tyxml-ppx": "*",
		"@opam/js_of_ocaml-tyxml": "*",
		"ocaml": "~4.14"
	},
	"devDependencies": {},
	"resolutions": {
		"@opam/tyxml-ppx": {
			"source": "github:Mbodin/tyxml#9d58025d024a9d474a807b1a86e2df8b4ba687af",
			"override": {
				"dependencies": {
					"@opam/dune": ">=2.7",
					"@opam/ocaml": "~4.14",
					"@opam/tyxml": "*",
					"@opam/tyxml-syntax": "*",
					"@opam/markup": ">=0.7.2",
					"@opam/ppxlib": ">=0.18"
				},
				"build": [
					[ "dune", "subst" ],
					[ "dune", "build", "-p", "tyxml-ppx", "@install" ]
				]
			}
		}
	}
}

